<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empty_query_list_text"
            android:text="Trochę tu pusto"
            android:layout_above="@+id/empty_query_list_search"
            android:layout_centerHorizontal="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wyszukaj coś"
            android:id="@+id/empty_query_list_search" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>